<Window x:Class="AIS_DB6.Views.Producers.ProducerAdding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS_DB6.Views.Producers"
        mc:Ignorable="d"
        Title="ProducerAdding" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height ="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row ="0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Додавання Виробника в базу"  FontSize ="16" VerticalAlignment="Top"/>
        <Grid Grid.Row ="1" >


            <Grid Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        
                        <RowDefinition></RowDefinition>


                    </Grid.RowDefinitions>



                    
                    <TextBlock Grid.Row ="1" Grid.Column="0" Grid.ColumnSpan ="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Назва" VerticalAlignment="Center"/>
                    <TextBox Grid.Row ="2" Grid.Column="0" Grid.ColumnSpan ="2" Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap"  VerticalAlignment="Center" />

                    <TextBlock Grid.Row ="3" Grid.Column="0" Grid.ColumnSpan ="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Відгуки" VerticalAlignment="Center"/>
                    <TextBox Grid.Row ="4" Grid.Column="0" Grid.ColumnSpan ="2" Text="{Binding Path=UserExpierence, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap"  VerticalAlignment="Center" />

                  
                    <TextBox Grid.Row ="5" Grid.RowSpan="3" IsEnabled="False" Grid.Column="0" Grid.ColumnSpan ="2" HorizontalAlignment="Stretch"  Margin="10 10" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch" />

                </Grid>
            </Grid>


        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin ="40 5" IsCancel="True" Content="Скасувати" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <Button Grid.Column="1" Margin ="40 5" IsCancel="True" Command="{Binding Path= SaveCommand}" Content="Зберегти" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</Window>
